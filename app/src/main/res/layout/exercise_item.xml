<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exercise_type"
            android:layout_alignParentEnd="true"
            android:text="Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exercise_name"
            android:text="Exercise name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@id/tv_exercise_type"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/tv_exercise_type"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exercise_category"
            android:layout_below="@id/tv_exercise_name"
            android:text="Category (for example fbw)"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exercise_description"
            android:layout_below="@id/tv_exercise_category"
            android:text="Description"
            />

        <LinearLayout
            android:id="@+id/series_details"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_below="@id/tv_exercise_description"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exercise_category"
                android:text="Series details"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>