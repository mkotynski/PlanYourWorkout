<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ExerciseActivity"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/button_save_choosen_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add choosen exercises to your plan"
        android:padding="20dp"
        android:textColor="@color/colorWhite"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/button_save_choosen_exercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        tools:listitem="@layout/exercise_item" />

</RelativeLayout>